<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>false</withJansi>
        <encoder>
            <pattern>
                <springProfile name="heroku">
                    %d{HH:mm:ss.SSS} [%thread] %-5level %-36logger{36} %msg %replace({%mdc}){'\{\}', ''}%n
                </springProfile>
                <springProfile name="!heroku">
                    %cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%-36logger{36}) %msg %replace(%green({%mdc})){'\{\}', ''}%n
                </springProfile>
            </pattern>
        </encoder>
    </appender>

    <springProfile name="dev">
        <logger name="com.github.arhor.simple.expense.tracker" level="DEBUG"/>
        <logger name="org.springframework.jdbc.core.JdbcTemplate" level="DEBUG"/>
    </springProfile>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
