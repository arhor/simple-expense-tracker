{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Notification",
  "type": "object",
  "properties": {
    "message": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50
    },
    "severity": {
      "type": "string",
      "enum": [
        "SUCCESS",
        "FAILURE"
      ]
    }
  },
  "additionalProperties": false
}
